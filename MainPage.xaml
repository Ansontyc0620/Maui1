<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppUI.MainPage"
             BackgroundColor="White">

    <ScrollView>
        <Grid RowDefinitions="Auto, 250, Auto, Auto, Auto, Auto, *, Auto" RowSpacing="15">

            <Grid Grid.Row="0" BackgroundColor="#7B68EE" Padding="15">
                <Label Text="Your Name and ID here"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Grid>

            <Image Grid.Row="1"
                   Source="image2.jpg"
                   Aspect="AspectFill" />

            <Grid Grid.Row="2" ColumnDefinitions="*, Auto" Padding="20,10,20,0">
                <VerticalStackLayout>
                    <Label Text="Robin Hood"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#1E1E1E" />
                    <Label Text="Pug"
                           FontSize="16"
                           TextColor="Gray" />
                </VerticalStackLayout>

                <HorizontalStackLayout Grid.Column="1" Spacing="8" VerticalOptions="Center">
                    <Image Source="symbolmale.png" WidthRequest="16" HeightRequest="16" />
                    <Image Source="clock.png" WidthRequest="16" HeightRequest="16" />
                    <Label Text="1 year old"
                           VerticalOptions="Center"
                           TextColor="Gray" />
                </HorizontalStackLayout>
            </Grid>

            <HorizontalStackLayout Grid.Row="3" Spacing="10" Padding="20,0">
                <Image Source="location.png"
                       WidthRequest="16"
                       HeightRequest="16"
                       VerticalOptions="Center" />
                <Label Text="38, Lorong 88, Taman Rantau Panjang, 96000 Sibu, Sarawak"
                       VerticalOptions="Center"
                       TextColor="Gray" />
            </HorizontalStackLayout>

            <BoxView Grid.Row="4"
                     HeightRequest="1"
                     Color="#E0E0E0"
                     Margin="20,0" />

            <Grid Grid.Row="5" ColumnDefinitions="Auto, *" ColumnSpacing="12" Padding="20,0">
                <Frame CornerRadius="25"
                       HeightRequest="50"
                       WidthRequest="50"
                       IsClippedToBounds="True"
                       Padding="0"
                       BorderColor="LightGray">
                    <Image Source="owner1.jpeg" Aspect="AspectFill" />
                </Frame>
                <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                    <Label Text="Jeon Jungkook"
                           FontAttributes="Bold"
                           TextColor="#1E1E1E" />
                    <Label Text="1.11.2024"
                           TextColor="Gray" />
                </VerticalStackLayout>
            </Grid>

            <Label Grid.Row="6"
                   Text="Hi! Robin the Pug is simply a tiny tornado of fat, wrinkles, and endless charm!"
                   Padding="20,0"
                   TextColor="Gray" />

            <Grid Grid.Row="7" ColumnDefinitions="Auto, *" ColumnSpacing="15" Padding="20">
                <Border Stroke="#E0E0E0"
                        StrokeThickness="1"
                        BackgroundColor="White"
                        HeightRequest="55"
                        WidthRequest="55">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="28" />
                    </Border.StrokeShape>
                    <Label Text="❤️"
                           FontSize="20"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Border>

                <Button Grid.Column="1"
                        Text="Adoption"
                        BackgroundColor="#FFD700"
                        TextColor="#1E1E1E"
                        CornerRadius="28"
                        HeightRequest="55"
                        FontAttributes="Bold" />
            </Grid>

        </Grid>
    </ScrollView>

</ContentPage>